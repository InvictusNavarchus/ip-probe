# Development Server Configuration
# The host/interface to bind the development server to
# Use 'localhost' for local development, '0.0.0.0' to bind to all interfaces
VITE_DEV_HOST=localhost

# The port number for the development server
VITE_DEV_PORT=3000

# Whether to automatically open the browser when starting dev server
VITE_DEV_OPEN=true

# Backend API Configuration
# Base URL for the backend API (used in production)
# In development, this is handled by Vite's proxy configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Backend server URL for proxy configuration
VITE_BACKEND_URL=http://localhost:3001

# Application Configuration
# Application title shown in browser tab and header
VITE_APP_TITLE=IP Probe - Network Analysis Dashboard

# Application description for meta tags
VITE_APP_DESCRIPTION=Privacy-focused network/IP analyzer and identifier

# Application version (usually set by build process)
VITE_APP_VERSION=1.0.0

# Environment mode (development, production, staging)
VITE_NODE_ENV=development

# Feature Flags
# Enable development tools and debugging features
VITE_ENABLE_DEV_TOOLS=true

# Enable React Query DevTools
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable detailed API request/response logging
VITE_ENABLE_API_LOGGING=true

# Enable source maps in production build
VITE_ENABLE_SOURCEMAPS=true

# Performance Configuration
# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Enable service worker for caching (production)
VITE_ENABLE_SERVICE_WORKER=false

# Security Configuration
# Content Security Policy mode (strict, moderate, disabled)
VITE_CSP_MODE=moderate

# Enable HTTPS in development (requires certificates)
VITE_HTTPS=false

# Analytics and Monitoring
# Google Analytics tracking ID (optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn

# Map Configuration
# Default map center coordinates (latitude, longitude)
VITE_DEFAULT_MAP_LAT=40.7128
VITE_DEFAULT_MAP_LNG=-74.0060

# Default map zoom level
VITE_DEFAULT_MAP_ZOOM=10

# Map tile provider (openstreetmap, mapbox, etc.)
VITE_MAP_PROVIDER=openstreetmap

# Mapbox access token (if using Mapbox)
# VITE_MAPBOX_TOKEN=your_mapbox_token

# UI Configuration
# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Enable theme persistence in localStorage
VITE_PERSIST_THEME=true

# Animation duration in milliseconds
VITE_ANIMATION_DURATION=300

# Build Configuration
# Target environment for build optimization
VITE_BUILD_TARGET=es2022

# Enable bundle analysis
VITE_ANALYZE_BUNDLE=false

# Chunk size warning limit in KB
VITE_CHUNK_SIZE_LIMIT=1000
